generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CalendarEvent {
  id          String   @id @default(uuid())
  title       String
  date        DateTime
  imageUrl    String?
  description String?
  images      Image[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Image {
  id        String   @id @default(uuid())
  filename  String

  path      String
  eventId   String?-=
  =
  event     CalendarEvent? @relation(fields: [eventId], references: [id])
  createdAt DateTime @default(now())
}